{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "./Cargo.toml",
        "../../Cargo.lock",
        "./src/**/*.rs"
      ]
    },

    "test": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "./Cargo.toml",
        "../../Cargo.lock",
        "./src/**/*.rs",
        "./tests/**/*.rs"
      ]
    }
  },
  "extends": ["//"]
}
