{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "package": {
      "dependsOn": ["build"]
    },

    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "./Cargo.toml",
        "./scripts/build.sh",
        "./src/**/*.rs"
      ],
      "outputs": ["../npm/*.js", "../npm/*.d.ts", "../npm/*.wasm"]
    },

    "test": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "./Cargo.toml",
        "./src/**/*.rs",
        "./tests/**/*.rs"
      ]
    }
  },
  "extends": ["//"]
}
